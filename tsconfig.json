{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true,  // Habilita todas las opciones estrictas
    "noImplicitAny": true  // Genera errores en cualquier variable que no tenga un tipo expl√≠cito
  }
}
